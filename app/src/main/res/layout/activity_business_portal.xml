<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".BusinessPortalActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:id="@+id/businessPortalText"
        android:text="Business Portal"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/counterButton"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@mipmap/counter_button"
        android:id="@+id/counterButton"
        app:layout_constraintBottom_toTopOf="@id/editInfoButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/businessPortalText"
        android:onClick="launchCounter"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@mipmap/edit_info_button"
        android:id="@+id/editInfoButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/counterButton"
        android:onClick="launchEditInfo"
        />



</androidx.constraintlayout.widget.ConstraintLayout>