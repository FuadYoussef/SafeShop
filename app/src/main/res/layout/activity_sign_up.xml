<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/accountBackground"
        android:layout_width="700dp"
        android:layout_height="400dp"
        android:src="@mipmap/account_page_background"
        android:text="background"
        app:layout_constraintBottom_toTopOf="@id/createAccountButton"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePicture" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="97dp"
        android:layout_height="107dp"
        android:src="@mipmap/profile_picture_image"
        android:text="background"
        app:layout_constraintBottom_toTopOf="@id/accountBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent
"
        app:layout_constraintTop_toBottomOf="@id/createAccountLabel"
        app:layout_constraintVertical_bias="0.478" />

    <TextView
        android:id="@+id/createAccountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Account:"
        android:textColor="@android:color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/profilePicture"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        app:layout_constraintBottom_toTopOf="@id/emailEdit"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePicture"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"/>

    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        app:layout_constraintBottom_toTopOf="@id/passwordEdit"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameEdit"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"/>

    <EditText
        android:id="@+id/passConfirmEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        app:layout_constraintBottom_toTopOf="@id/createAccountButton"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordEdit"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"/>

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@id/passConfirmEdit"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailEdit"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"/>

    <ImageView
        android:id="@+id/createAccountButton"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:onClick="launchSearch"
        android:src="@mipmap/sign_up_button"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accountBackground" />


</androidx.constraintlayout.widget.ConstraintLayout>