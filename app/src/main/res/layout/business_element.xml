<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/business_element_layout">

    <ImageView
        android:id="@+id/businessBackground"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="launchSignUpCustomer"
        android:src="@mipmap/business_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/businessNameLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:hint="Business Name"
        android:maxLines="1"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/businessBackground"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="@id/businessBackground"
        app:layout_constraintRight_toLeftOf="@id/peopleIcon"
        app:layout_constraintTop_toTopOf="@id/businessBackground" />

    <ImageView
        android:id="@+id/peopleIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:onClick="launchSignUpCustomer"
        android:src="@mipmap/people_icon"
        app:layout_constraintBottom_toBottomOf="@id/businessBackground"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintLeft_toRightOf="@id/businessNameLabel"
        app:layout_constraintRight_toLeftOf="@id/numPeopleLabel"
        app:layout_constraintTop_toTopOf="@id/businessBackground"
        app:layout_constraintVertical_bias="0.375" />

    <TextView
        android:id="@+id/numPeopleLabel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:hint="###"
        android:maxLines="1"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/businessBackground"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toRightOf="@id/peopleIcon"
        app:layout_constraintRight_toLeftOf="@id/waitingIcon"
        app:layout_constraintTop_toTopOf="@id/businessBackground" />

    <ImageView
        android:id="@+id/waitingIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:onClick="launchSignUpCustomer"
        android:src="@mipmap/waiting_icon"
        app:layout_constraintBottom_toBottomOf="@id/businessBackground"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintLeft_toRightOf="@id/numPeopleLabel"
        app:layout_constraintRight_toLeftOf="@id/numWaitingLabel"
        app:layout_constraintTop_toTopOf="@id/businessBackground"
        app:layout_constraintVertical_bias="0.375" />

    <TextView
        android:id="@+id/numWaitingLabel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:hint="###"
        android:maxLines="1"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/businessBackground"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toRightOf="@id/waitingIcon"
        app:layout_constraintRight_toLeftOf="@id/arrow"
        app:layout_constraintTop_toTopOf="@id/businessBackground" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:onClick="launchSignUpCustomer"
        android:src="@mipmap/business_element_arrow"
        app:layout_constraintBottom_toBottomOf="@id/businessBackground"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintLeft_toRightOf="@id/numWaitingLabel"
        app:layout_constraintRight_toRightOf="@id/businessBackground"
        app:layout_constraintTop_toTopOf="@id/businessBackground"
        app:layout_constraintVertical_bias="0.375" />
</androidx.constraintlayout.widget.ConstraintLayout>